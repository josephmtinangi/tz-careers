<div class="jumbotron">
	<div class="container">
		<h1><%= @company.name %></h1>
		<p><%= @company.description %></p>
		<p>
			<a href="<%= @company.website %>" class="btn btn-primary btn-lg">Visit website</a>
		</p>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h2>Jobs</h2>
			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Title</th>
							<th>Description</th>
						</tr>
					</thead>
					<tbody>
						<% @company.jobs.each do |job| %>
							<tr>
								<td><%= job.title %></td>
								<td><%= job.description %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<h2>New job</h2>
			<%= form_for([@company, @company.jobs.build]) do |f| %>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :description %>
					<%= f.text_area :description, class: "form-control", rows: "5" %>
				</div>
				<%= f.submit "Create Job", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<%= link_to 'Edit', edit_company_path(@company) %> | 
			<%= link_to 'Back', companies_path %>
		</div>
	</div>
</div>
