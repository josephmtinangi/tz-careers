<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>All Companies</h1>
			<div class="table-responsive">
				<table class="table table-hover table-striped table-bordered">
					<thead>
						<tr>
							<th>Name</th>
							<th>Website</th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						<% @companies.each do |company| %>
							<tr>
								<td><%= company.name %></td>
								<td><%= company.website %></td>
								<td><%= link_to 'Show', company_path(company) %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>