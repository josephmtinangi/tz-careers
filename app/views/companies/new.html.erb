<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>New Company</h1>
      <%= form_for :company, url: companies_path do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :website %>
            <%= f.text_field :website, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :subdomain %>
            <%= f.text_field :subdomain, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :logo %>
            <%= f.text_field :logo %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", rows: "5" %>
          </div>
          <%= f.submit "Save Company", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>